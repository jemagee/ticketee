<% title(@project.name, "Projects") %>
<div class="page-header">
	<h1><%= @project.name %></h1>
	<ul class="actions">
		<li><%= link_to "New Ticket", new_project_ticket_path(@project), class: 'new' %></li>
		<li><%= link_to "Edit Project", edit_project_path(@project), class: "edit" %></li>
		<% admins_only do %>
			<li><%= link_to  "Delete Project", admin_project_path(@project), method: :delete, data: {confirm: "Are you sure you want to delete project?"}, class: "delete" %></li>
		<% end %>
</div>
<p><%= @project.description %></p>
<div id="tickets">
	<% @project.tickets.each do |ticket| %>
		<p id="<%= ticket.id %>"><%= link_to ticket.title, [@project, ticket] %><%= link_to "Delete Ticket", [@project, ticket], method: :delete, data: {confirm: "Are you sure you want to delete this ticket?"}, class: 'delete'  %></p>
	<% end %>
</div>


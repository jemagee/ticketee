<% title(@project.name, "Projects") %>
<div class="page-header">
	<h1><%= @project.name %></h1>
	<ul class="actions">
		<li><%= link_to "New Ticket", new_project_ticket_path(@project), class: 'new' %></li>
		<li><%= link_to "Edit Project", edit_project_path(@project), class: "edit" %></li>
		<li><%= link_to  "Delete Project", project_path(@project), method: :delete, data: {confirm: "Are you sure you want to delete project?"}, class: "delete" %></li>
</div>
<p><%= @project.description %></p>
<% @project.tickets.each do |ticket| %>
	<%= link_to ticket.title, [@project, ticket] %>
<% end %>

